      "name": "Login with non-existent account",
      "method": "POST",
      "path": "/",
      "body": {
        "action": "login",
        "email": "nonexistent@example.com",
        "password": "wrongpass"
      },
      "expectedStatus": 404,
      "expectedBody": {
        "error": "string"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Verify token",
      "method": "GET",
      "path": "/",
      "headers": {
        "X-Auth-Token": "invalid-token"
      },
      "expectedStatus": 401,
      "expectedBody": {
        "error": "string"
      },
      "bodyMatcher": "partial"
    }
  ]
}